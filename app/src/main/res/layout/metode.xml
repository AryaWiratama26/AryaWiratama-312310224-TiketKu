<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#f8f8f8">

    <!-- Header atau Judul -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Metode Pembayaran"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"/>

    <!-- Logo BCA -->
    <ImageView
        android:id="@+id/logoBCA"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_bca"
        android:contentDescription="Logo BCA"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center" />

    <!-- Logo Gopay -->
    <ImageView
        android:id="@+id/logoGopay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_gopay"
        android:contentDescription="Logo Gopay"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center" />

    <!-- Logo Dana -->
    <ImageView
        android:id="@+id/logoDana"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_dana"
        android:contentDescription="Logo Dana"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center" />

    <!-- Button Bayar -->
    <Button
        android:id="@+id/bayarBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:padding="16dp"
        />
</LinearLayout>
